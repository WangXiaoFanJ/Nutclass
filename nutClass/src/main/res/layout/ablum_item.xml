<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ablums_item_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp" >

    <com.dev.nutclass.view.AblumSquareLayout
        android:id="@+id/ll_ablum_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_ablum_item"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ablum_default" />

        <ImageView
            android:id="@+id/iv_ablum_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/common_5"
            android:layout_marginTop="@dimen/common_5"
            android:src="@drawable/login_close_dialog" />

        <TextView
            android:id="@+id/tv_album_mask"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_launcher"
            android:gravity="center"
            android:text="+7"
            android:textSize="28sp"
            android:visibility="gone" />
    </com.dev.nutclass.view.AblumSquareLayout>

    <com.dev.nutclass.view.AblumSquareLayout
        android:id="@+id/ll_add"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <!-- 原来底端有“添加图片”几个文字 -->

        <TextView
            android:id="@+id/album_add"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/selector_img_add"
            android:gravity="bottom|center_horizontal"
            android:text="" />
    </com.dev.nutclass.view.AblumSquareLayout>

</RelativeLayout>