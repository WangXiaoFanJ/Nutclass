<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_activity_white"
    >

    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_20"
            android:layout_marginTop="@dimen/common_25"
            android:text="分享到"
            android:textColor="@color/font_color_pink"
            android:textSize="@dimen/font_16" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_40"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_46"
                android:src="@drawable/selector_login_weixin" />

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_login_qq" />

            <LinearLayout
                android:id="@+id/ll_delete"
                android:layout_width="@dimen/common_50"
                android:layout_height="@dimen/common_50"
                android:layout_marginLeft="@dimen/common_46"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_close_dialog" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_6"
                    android:text="@string/text_delete_step"
                    android:textColor="@color/font_color_pink"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>