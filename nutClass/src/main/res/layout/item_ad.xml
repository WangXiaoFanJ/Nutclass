<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_ad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/color_0"
    android:layout_marginBottom="10dp"
    >

    <com.dev.nutclass.view.RoundedImageView
        android:id="@+id/iv_ad"
        android:layout_width="@dimen/common_30"
        android:layout_height="@dimen/common_30"
        android:scaleType="fitXY"
        android:src="@drawable/icon_add"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/tv_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="2121"
        android:layout_marginTop="@dimen/common_8"
        android:textColor="@color/color_100"
        android:textSize="@dimen/font_14" >
    </TextView>

</LinearLayout>