<?xml version="1.0" encoding="utf-8"?>
<!-- android:background="@drawable/bottom_item_bg" -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_item"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/height_home_nav"
    android:orientation="horizontal"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/ll_nav_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bottom_img"
            android:layout_width="@dimen/common_24"
            android:layout_height="@dimen/common_24"
            android:scaleType="centerInside"
            android:src="@drawable/nav_icon_home" />

        <TextView
            android:id="@+id/bottom_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_5"
            android:text="@string/home_nav_home"
            android:textColor="@drawable/selector_home_nav_txt"
            android:textSize="@dimen/font_10"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>