<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_weixin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:layout_marginBottom="@dimen/common_10"
        android:layout_marginLeft="@dimen/common_30"
        android:layout_marginRight="@dimen/common_30"
        android:background="@drawable/radius_white_alpha_10_with_stroke_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_5"
            android:src="@drawable/login_weixin" />

        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="match_parent"
            android:background="@color/color_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="微信账号登陆"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_qq"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:layout_marginBottom="@dimen/common_10"
        android:layout_marginLeft="@dimen/common_30"
        android:layout_marginRight="@dimen/common_30"
        android:background="@drawable/radius_white_alpha_10_with_stroke_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_5"
            android:src="@drawable/login_qq" />

        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="match_parent"
            android:background="@color/color_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="QQ账号登陆"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weibo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:layout_marginBottom="@dimen/common_10"
        android:layout_marginLeft="@dimen/common_30"
        android:layout_marginRight="@dimen/common_30"
        android:background="@drawable/radius_white_alpha_10_with_stroke_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_5"
            android:src="@drawable/login_weibo" />

        <View
            android:layout_width="@dimen/line_size"
            android:layout_height="match_parent"
            android:background="@color/color_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="新浪账号登陆"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40"
        android:layout_marginBottom="@dimen/common_30"
        android:layout_marginLeft="@dimen/common_30"
        android:layout_marginRight="@dimen/common_30"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/common_20"
            android:layout_weight="1"
            android:background="@drawable/radius_white_alpha_10_with_stroke_bg"
            android:gravity="center"
            android:text="登陆"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/radius_white_alpha_10_with_stroke_bg"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_20"
        android:gravity="center"
        android:text="跳过"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_14" />

</LinearLayout>