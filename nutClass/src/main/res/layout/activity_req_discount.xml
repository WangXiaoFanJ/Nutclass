<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_parent"
    android:background="@color/bg_req_discount_activity_grey"
    android:orientation="vertical"
    tools:context="com.dev.nutclass.activity.ReqDiscountActivity">

    <com.dev.nutclass.view.TitleBar xmlns:attr="http://schemas.android.com/apk/res/com.dev.nutclass"
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_titlebar"
        attr:left_type="1"
        attr:middle_text="提交信息" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:layout_marginTop="@dimen/common_10"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10"
            android:src="@drawable/icon_small_star"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_3"
            android:text="机构名称："
            android:textColor="@color/color_41"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_80"
            android:textSize="@dimen/font_11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:layout_marginTop="@dimen/common_2"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10"
            android:src="@drawable/icon_small_star"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_3"
            android:text="机构位置："
            android:textColor="@color/color_41"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tv_school_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_80"
            android:textSize="@dimen/font_11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:layout_marginTop="@dimen/common_2"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10"
            android:src="@drawable/icon_small_star"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_3"
            android:text="教学类别："
            android:textColor="@color/color_41"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tv_school_cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_80"
            android:textSize="@dimen/font_11" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/common_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10"
                android:src="@drawable/icon_small_star"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_3"
                android:text="您的手机号："
                android:textColor="@color/color_80"
                android:textSize="@dimen/font_12" />
            <EditText
                android:id="@+id/tv_user_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请输入您的手机号"
                android:textColor="@color/home_nav_txt_ed"
                android:background="@drawable/shape_edit_tranparent"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/common_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_20"
                android:text="您所了解到的价格："
                android:textColor="@color/color_80"
                android:textSize="@dimen/font_12" />
            <EditText
                android:id="@+id/edit_price"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/common_10"
                android:layout_height="30dp"
                android:paddingLeft="@dimen/common_5"
                android:hint="此价格将对您的砍价价格造成影响"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_edit_tranparent"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_80"
                android:textColorHint="#b8b8b8"
                />
        </LinearLayout>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:gravity="center_vertical"-->
            <!--android:text="此价格将对您的砍价价格造成影响>"-->
            <!--android:layout_marginRight="@dimen/common_10"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:textSize="@dimen/font_11" />-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/color_white"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_12"
            android:layout_marginTop="@dimen/common_5"
            android:layout_marginLeft="@dimen/common_20"
            android:textColor="@color/color_80"
            android:text="需求描述："/>
        <EditText
            android:id="@+id/edit_content"
            android:layout_toRightOf="@id/tv_describe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/common_5"
            android:layout_marginRight="@dimen/common_10"
            android:textColor="@color/color_80"
            android:textSize="@dimen/font_10"
            android:paddingTop="@dimen/common_5"
            android:gravity="start"
            android:textColorHint="#898989"
            android:hint="请详细描述您的需求，如：我想去上课，但价格太贵，希望课比课帮我完成砍价"
            android:background="@drawable/shape_edit_req_discount"/>

    </RelativeLayout>
    
    <Button
        android:id="@+id/btn_commit"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="@dimen/font_35"
        android:background="@drawable/shape_btn_makesure"
        android:text="提  交"
        android:textSize="@dimen/font_15"
        android:textColor="@color/color_white"/>



</LinearLayout>
