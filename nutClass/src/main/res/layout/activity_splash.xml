<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/spalsh"
    tools:context="com.dev.nutclass.activity.SplashActivity" >

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/iv_splash_bg"
    android:visibility="gone"
    android:scaleType="fitXY"/>
      <LinearLayout
          android:id="@+id/ll_skip"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:background="@drawable/splash_timer_bg"
          android:layout_alignParentRight="true"
          android:layout_marginTop="5dp"
          android:layout_marginRight="5dp"
          android:orientation="vertical"
          android:visibility="gone"
          android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:text="跳过"
                android:textSize="@dimen/font_10"
                />
            <TextView
                android:id="@+id/tv_count_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5s"
                android:textSize="10sp"
                android:textColor="@color/color_white"
                />
      </LinearLayout>

