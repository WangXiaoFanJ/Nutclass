<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_main_activity_grey"
    android:orientation="vertical" >

    <com.dev.nutclass.view.TitleBar
        xmlns:attr="http://schemas.android.com/apk/res/com.dev.nutclass"
        android:id="@+id/tb_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_titlebar"
        attr:left_type="1"
        attr:middle_text="@string/text_titlebar_order" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/list_divider_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_school_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:layout_marginBottom="@dimen/line_size"
                    android:layout_marginLeft="@dimen/common_5"
                    android:background="@color/bg_main_activity_white"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="学校名称"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_16" />

                <com.dev.nutclass.view.RoundedImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/porfile_default_male"
                    android:visibility="gone"
                    app:riv_oval="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_5"
                    android:background="@color/bg_main_activity_white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/common_15"
                    android:paddingRight="@dimen/common_15" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:singleLine="true"
                            android:text="课程名称"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/tv_course_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="课程名称"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/line_size"
                        android:background="@color/list_divider_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:singleLine="true"
                            android:text="授课校区"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/tv_school_little"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="常住地"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/line_size"
                        android:background="@color/list_divider_line" />

                    <LinearLayout
                        android:id="@+id/ll_course_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:singleLine="true"
                            android:text="课程时长"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/tv_course_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="常住地"
                            android:textColor="@color/color_red"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/line_size"
                        android:background="@color/list_divider_line" />

                    <LinearLayout
                        android:id="@+id/ll_school_tel"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:singleLine="true"
                            android:text="校区电话"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/tv_school_tel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:maxLines="2"
                            android:singleLine="false"
                            android:text="常住地"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/line_size"
                        android:background="@color/list_divider_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:singleLine="true"
                            android:text="校区地址"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/tv_school_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:maxLines="2"
                            android:singleLine="false"
                            android:text="常住地"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/line_size"
                        android:background="@color/list_divider_line" />
                    <LinearLayout
                        android:id="@+id/ll_card"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/card_promotion_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="立减"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />

                        <!--<TextView-->
                            <!--android:id="@+id/tv_card_name"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginLeft="@dimen/common_5"-->
                            <!--android:singleLine="true"-->
                            <!--android:text="常住地"-->
                            <!--android:textColor="@color/color_60"-->
                            <!--android:textSize="@dimen/font_14" />-->

                        <TextView
                            android:id="@+id/tv_card_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:singleLine="true"
                            android:text="常住地"
                            android:textColor="@color/color_red"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:layout_marginLeft="@dimen/common_5"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/common_15"
                    android:paddingRight="@dimen/common_15"
                    android:singleLine="true"
                    android:text="个人信息"
                    android:textColor="@color/color_60"
                    android:textSize="@dimen/font_14"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_5"
                    android:background="@color/bg_main_activity_white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/common_15"
                    android:paddingRight="@dimen/common_15" >

                    <LinearLayout
                        android:id="@+id/ll_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="优惠券："
                            android:layout_marginLeft="@dimen/common_5"
                            android:singleLine="true"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />
                        <TextView
                            android:id="@+id/tv_coopon"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_40"
                            android:layout_marginLeft="@dimen/common_5"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text="请选择优惠券"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/line_size"
                        android:background="@color/list_divider_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总   价:"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14"
                            android:layout_marginLeft="@dimen/common_5"/>
                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="0元"
                            android:textColor="@color/color_red"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/line_size"
                        android:background="@color/list_divider_line" />

                    <LinearLayout
                        android:id="@+id/ll_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="手机号码"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:hint="请点击添加手机号"
                            android:singleLine="true"
                            android:text=""
                            android:gravity="right|center_vertical"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/line_size"
                        android:background="@color/list_divider_line" />

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="您的姓名"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />

                        <EditText
                            android:id="@+id/edit_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:hint="请输入您的姓名"
                            android:singleLine="true"
                            android:text=""
                            android:background="@android:color/transparent"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_pay_type"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="支付方式"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/tv_pay_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:hint="支付宝"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_pay_change"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />

                        <TextView
                            android:id="@+id/tv_pay_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:hint="更换支付方式>"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40"
                    android:layout_marginBottom="@dimen/common_10"
                    android:layout_marginLeft="@dimen/common_10"
                    android:layout_marginRight="@dimen/common_10"
                    android:layout_marginTop="@dimen/common_20"
                    android:background="@drawable/radius_red_bg"
                    android:gravity="center"
                    android:text="提交订单"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_5"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="订单合计"
                    android:textColor="@color/color_60"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>