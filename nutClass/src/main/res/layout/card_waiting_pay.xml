<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_10"
            android:background="@color/bg_main_activity_grey" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_38"
            android:background="@color/color_white">
            <LinearLayout
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_38"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_brand_logo"
                    android:layout_width="@dimen/common_30"
                    android:layout_height="@dimen/common_15"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="@dimen/common_10"
                    android:src="@drawable/bg_home_head"
                    />
                <TextView
                    android:id="@+id/tv_brand_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_11"
                    android:textColor="@color/color_80"
                    android:layout_marginLeft="@dimen/common_10"
                    android:text="红黄蓝亲子园"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="等待用户付款"
                android:textColor="@color/home_nav_txt_ed"
                android:textSize="@dimen/font_12"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/common_10"
                />
        </RelativeLayout>
        <LinearLayout
            android:background="@color/bg_main_activity_white"
            android:id="@+id/ll_waiting_pay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
        <RelativeLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_38">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common_10"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_order_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/color_80"
                    android:text="共有几个课程"/>
                <TextView
                    android:layout_marginLeft="@dimen/common_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小计:"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/color_80"/>
                <TextView
                    android:id="@+id/tv_subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_red_20"
                    android:textSize="@dimen/font_12"
                    android:text="3000"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_main_activity_grey"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_38"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_marginLeft="@dimen/common_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/font_12"
                android:text="下单时间："
                />
            <TextView
                android:id="@+id/tv_pay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_80"
                android:text="0"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_main_activity_grey" />
        <LinearLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_38"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_marginLeft="@dimen/common_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_normal"
                android:textSize="@dimen/font_12"
                android:text="订单编号："
                />
            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_80"
                android:text="0"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_main_activity_grey" />
        <RelativeLayout
            android:background="@color/color_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_38">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/common_10"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/tv_cancle_order"
                    android:layout_width="72dp"
                    android:layout_height="@dimen/common_25"
                    android:gravity="center"
                    android:text="取消订单"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/color_text_normal"
                    android:background="@drawable/shape_gray_cir" />
                <TextView
                    android:id="@+id/tv_pay_order"
                    android:layout_width="72dp"
                    android:layout_height="@dimen/common_25"
                    android:layout_marginLeft="@dimen/common_10"
                    android:gravity="center"
                    android:text="去付款"
                    android:textColor="@color/color_red_20"
                    android:textSize="@dimen/font_12"
                    android:background="@drawable/shape_red_cir"
                  />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>