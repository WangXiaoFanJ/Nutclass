<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_main_activity_white"
    android:orientation="vertical" >

    <com.dev.nutclass.view.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_titlebar"
        attr:left_type="1"
        attr:middle_text="抢购区" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/tb_title"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:background="@drawable/radius_white_bg"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_5"
                android:background="@drawable/bg_zero_state"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/common_5"
                android:paddingLeft="@dimen/common_10"
                android:paddingRight="@dimen/common_20"
                android:paddingTop="@dimen/common_5"
                android:src="@drawable/bg_zero_state" >

                <TextView
                    android:id="@+id/tv_periodical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="第1043期"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_12"
                android:layout_marginTop="@dimen/common_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_15"
                android:paddingRight="@dimen/common_15" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/common_15"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/common_6"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="尼克魔力英语"
                                android:textColor="@color/color_100"
                                android:textSize="@dimen/font_16" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/common_5"
                                android:src="@drawable/hospital_flag_v"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/common_6"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_scape"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="通用"
                                android:textColor="@color/color_60"
                                android:textSize="@dimen/font_12" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="市场价12345元"
                            android:textColor="@color/color_40"
                            android:textSize="@dimen/font_12" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="@dimen/icon_size_zero_info"
                    android:layout_height="@dimen/icon_size_zero_info"
                    android:scaleType="fitXY"
                    android:src="@drawable/porfile_default_male" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_action_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="活动时间"
                    android:textColor="@color/color_40"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tv_praise_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_10"
                    android:singleLine="true"
                    android:text="开奖时间"
                    android:textColor="@color/color_40"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/common_10"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_attend"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="@dimen/common_5"
                    android:layout_marginTop="@dimen/common_5"
                    android:background="@drawable/radius_red_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/common_5"
                    android:paddingLeft="@dimen/common_5"
                    android:paddingRight="@dimen/common_5"
                    android:paddingTop="@dimen/common_5"
                    android:singleLine="true"
                    android:text="立即抽奖"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/common_5"
                    android:layout_marginTop="@dimen/common_5"
                    android:background="@drawable/radius_green_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/common_5"
                    android:paddingLeft="@dimen/common_5"
                    android:paddingRight="@dimen/common_5"
                    android:paddingTop="@dimen/common_5"
                    android:singleLine="true"
                    android:text="再拿一个抽奖码"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_10"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_marginTop="@dimen/common_10"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="活动详情"
                android:textColor="@color/color_60"
                android:textSize="@dimen/font_12" />

            <View
                android:id="@+id/view_divider"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_size"
                android:layout_marginLeft="@dimen/common_15"
                android:layout_marginRight="@dimen/common_15"
                android:background="@color/list_divider_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/common_10" >

                <TextView
                    android:id="@+id/tv_zero_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/common_5"
                    android:gravity="center_vertical|left"
                    android:singleLine="false"
                    android:text="123456人已经参加"
                    android:textColor="@color/color_60"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>