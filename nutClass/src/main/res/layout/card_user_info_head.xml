<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_ad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_activity_grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_main_activity_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_15"
        android:paddingRight="@dimen/common_15"
        android:paddingTop="@dimen/common_25" >

        <com.dev.nutclass.view.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/size_portrait_userinfo_105"
            android:layout_height="@dimen/size_portrait_userinfo_105"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/porfile_default_male"
            app:riv_oval="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_20"
            android:layout_marginTop="@dimen/common_8"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="--"
                android:textColor="@color/font_color_pink"
                android:textSize="@dimen/font_12" />

            <ImageView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/common_5"
                android:layout_toRightOf="@id/tv_name"
                android:src="@drawable/gender_male" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_follow"
            android:layout_width="@dimen/width_like_btn"
            android:layout_height="@dimen/height_follow_btn"
            android:background="@drawable/selector_btn_common_pink"
            android:gravity="center"
            android:text="@string/text_follow"
            android:textColor="@color/color_0"
            android:textSize="@dimen/font_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_10" >

            <LinearLayout
                android:id="@+id/ll_follow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/user_info_follow"
                    android:textColor="@color/color_50"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/common_8"
                    android:text="--"
                    android:textColor="@color/font_color_pink"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/height_card_border_divider"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/common_8"
                android:layout_marginTop="@dimen/common_8"
                android:background="@color/card_border_color_10" />

            <LinearLayout
                android:id="@+id/ll_fans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/user_info_fans"
                    android:textColor="@color/color_50"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/common_8"
                    android:text="--"
                    android:textColor="@color/font_color_pink"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>

            <View
                android:id="@+id/view_divider"
                android:layout_width="@dimen/height_card_border_divider"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/common_8"
                android:layout_marginTop="@dimen/common_8"
                android:background="@color/card_border_color_10" />

            <LinearLayout
                android:id="@+id/ll_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/user_info_like"
                    android:textColor="@color/color_50"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/common_8"
                    android:text="--"
                    android:textColor="@color/font_color_pink"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_card_border_divider"
        android:layout_marginBottom="@dimen/common_5"
        android:background="@color/card_border_color_10" />

</LinearLayout>