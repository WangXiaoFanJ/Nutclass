<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_btn"
    android:background="@color/bg_main_activity_white"
    android:orientation="horizontal" >

    <View
        android:id="@+id/line_left"
        android:layout_width="@dimen/height_card_border_divider"
        android:layout_height="fill_parent"
        android:background="@color/card_border_color_10" />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_foot_more_load"
            android:textColor="@color/color_70"
            android:textSize="@dimen/font_12" />

        <View
            android:id="@+id/line_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_card_border_divider"
            android:background="@color/card_border_color_10" />
    </LinearLayout>

    <View
        android:id="@+id/line_right"
        android:layout_width="@dimen/height_card_border_divider"
        android:layout_height="fill_parent"
        android:background="@color/card_border_color_10" />

</LinearLayout>