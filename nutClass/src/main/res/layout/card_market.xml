<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_activity_white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_10"
            android:paddingLeft="@dimen/common_10"
            android:paddingRight="@dimen/common_10"
            android:paddingTop="@dimen/common_10" >

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/icon_size_zero"
                android:layout_height="@dimen/icon_size_zero"
                android:scaleType="fitXY"
                android:src="@drawable/porfile_default_male" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_15"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/common_6"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="尼克魔力英语"
                            android:textColor="@color/color_100"
                            android:textSize="@dimen/font_16" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/common_5"
                            android:src="@drawable/hospital_flag_v"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/radius_gray_40_bg"
                            android:paddingBottom="@dimen/common_5"
                            android:paddingLeft="@dimen/common_5"
                            android:paddingRight="@dimen/common_5"
                            android:paddingTop="@dimen/common_5"
                            android:singleLine="true"
                            android:text="交易中"
                            android:visibility="gone"
                            android:textColor="@color/color_0"
                            android:textSize="@dimen/font_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/common_2"
                        android:layout_marginTop="@dimen/common_6"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_scape"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="销售价"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_12" />
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="2016-1-1"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="13元"
                            android:textColor="@color/color_red"
                            android:textSize="@dimen/font_12" />

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_personal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="个人"
                            android:textColor="@color/color_40"
                            android:textSize="@dimen/font_12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_divider"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/list_divider_line" />
    </LinearLayout>

</LinearLayout>