<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_10"
        android:background="@color/bg_main_activity_grey" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:layout_marginLeft="@dimen/common_10"
        android:gravity="center_vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_11"
        android:textColor="@color/color_80"
        android:text="手机号码："/>
    <TextView
        android:id="@+id/tv_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_11"
        android:textColor="@color/color_80"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_10"
        android:text="-"
        />
  </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:layout_marginLeft="@dimen/common_10"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_11"
            android:textColor="@color/color_80"
            android:text="支付方式："/>
        <TextView
            android:id="@+id/tv_pay_type_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_11"
            android:textColor="@color/color_80"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_10"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:layout_marginLeft="@dimen/common_10"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_11"
            android:textColor="@color/color_80"
            android:layout_alignParentRight="true"
            android:text="选择支付方式>"
            android:layout_marginRight="@dimen/common_10"/>
    </RelativeLayout>
</LinearLayout>