<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:layout_marginTop="1dp"
        android:background="@color/color_white"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_plus_price_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10"
                android:background="@drawable/shape_red_cir"
                android:paddingBottom="1dp"
                android:paddingLeft="@dimen/common_10"
                android:paddingRight="@dimen/common_10"
                android:paddingTop="1dp"
                android:text="加价购"
                android:textColor="@color/color_red_20"
                android:textSize="@dimen/font_11" />

            <TextView
                android:id="@+id/tv_plus_price_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_3"
                android:layout_toRightOf="@id/tv_plus_price_icon"
                android:gravity="center_vertical"
                android:text="课比课活动"
                android:textColor="@color/color_80"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_main_activity_grey" />
    </RelativeLayout>
</RelativeLayout>