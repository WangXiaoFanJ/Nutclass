                <!--android:background="@drawable/radius_red_bg"-->
                <!--/>-->
        <!--</RelativeLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/common_10"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="支付方式"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/color_60"
                android:textSize="@dimen/font_12" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_pay1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableLeft="@drawable/icon_pay_ali"
                android:drawablePadding="5dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="支付宝"
                android:textColor="@color/color_60"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_pay2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableLeft="@drawable/icon_pay_wx"
                android:drawablePadding="5dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="微信"
                android:textColor="@color/color_60"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_pay3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:drawableLeft="@drawable/icon_pay_credit"
                android:drawablePadding="5dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="信用卡分期"
                android:textColor="@color/color_60"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/list_divider_line" />

    <LinearLayout
        android:id="@+id/ll_desc_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_course_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/common_10"
            android:paddingLeft="@dimen/common_15"
            android:paddingRight="@dimen/common_15"
            android:paddingTop="@dimen/common_10"
            android:singleLine="false"
            android:text="课程详情"
            android:textColor="@color/color_60"
            android:textSize="@dimen/font_12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_15"
            android:layout_marginRight="@dimen/common_15"
                android:padding="5dp"
            android:src="@drawable/icon_arrow_right" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/common_10"
            android:paddingLeft="@dimen/common_15"
            android:paddingRight="@dimen/common_15"
            android:paddingTop="@dimen/common_10"
            android:singleLine="false"
            android:text="加价购"
            android:textColor="@color/color_60"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/bg_main_activity_white"
        android:id="@+id/ll_plus_price_buy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_plus_price_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/common_10"
            android:paddingLeft="@dimen/common_15"
            android:paddingRight="@dimen/common_15"
            android:paddingTop="@dimen/common_10"
            android:singleLine="false"
            android:text="点击查看更多"
            android:textColor="@color/color_60"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_fold_plus_price"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/common_10"
            android:paddingLeft="@dimen/common_15"
            android:paddingRight="@dimen/common_15"
            android:paddingTop="@dimen/common_10"
            android:singleLine="false"
            android:text="点击收起"
            android:textColor="@color/color_60"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/list_divider_line" />
    
    <LinearLayout
        android:id="@+id/ll_course_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:paddingBottom="@dimen/common_10"
            android:paddingLeft="@dimen/common_15"
            android:paddingRight="@dimen/common_15"
            android:paddingTop="@dimen/common_10"
            android:singleLine="false"
            android:text="更多课程"
            android:textColor="@color/color_60"
            android:textSize="@dimen/font_12" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            
            android:singleLine="false"
            android:text="查看更多"
            android:visibility="gone"
            android:textColor="@color/color_60"
            android:textSize="@dimen/font_12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             
            android:layout_marginRight="@dimen/common_15"
            android:padding="5dp"
            android:src="@drawable/icon_arrow_right" />
    </LinearLayout>
    
     <LinearLayout
        android:background="@color/bg_main_activity_white"
        android:id="@+id/ll_course_other"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:orientation="vertical" >
       
    </LinearLayout>

</LinearLayout>