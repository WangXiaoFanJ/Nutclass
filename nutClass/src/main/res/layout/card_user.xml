<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_activity_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_15"
    android:paddingRight="@dimen/common_15" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.dev.nutclass.view.RoundedImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/size_portrait_userlist_40"
            android:layout_height="@dimen/size_portrait_userlist_40"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/common_10"
            android:src="@drawable/porfile_default_male"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_10"
            android:layout_marginTop="@dimen/common_12"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="用户名"
                    android:textColor="@color/font_color_pink"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/common_5"
                    android:src="@drawable/gender_female" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/common_10"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/select_doctor_fans"
                    android:textColor="@color/color_60"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tv_fans_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/color_60"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_12"
                    android:singleLine="true"
                    android:text="@string/select_doctor_follow"
                    android:textColor="@color/color_60"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tv_follow_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/color_60"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_follow"
            android:layout_width="@dimen/width_like_btn"
            android:layout_height="@dimen/height_follow_btn"
            android:background="@drawable/selector_btn_common_pink"
            android:gravity="center"
            android:text="@string/text_follow"
            android:textColor="@color/color_0"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_card_border_divider"
        android:layout_marginBottom="@dimen/common_5"
        android:background="@color/card_border_color_10" />

</LinearLayout>