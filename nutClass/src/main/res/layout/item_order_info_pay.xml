<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--Android:descendantFocusability=“blocksDescendants”-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_10"
        android:background="@color/bg_main_activity_grey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_brand_logo"
            android:layout_width="@dimen/common_30"
            android:layout_height="@dimen/common_15"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/common_10"
            android:src="@drawable/bg_home_head"
            />
        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_11"
            android:textColor="@color/color_80"
            android:layout_marginLeft="@dimen/common_10"
            android:text="红黄蓝亲子园"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/common_5"
        android:paddingBottom="@dimen/common_10"
        android:background="@color/bg_main_activity_grey">
        <ImageView
            android:id="@+id/iv_goods_thumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/common_10"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_80"
                android:layout_marginTop="@dimen/common_2"
                android:text="红黄蓝亲子园亲自课时包"/>
            <TextView
                android:id="@+id/tv_xiaoqu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="校区：红黄蓝双井校区"
                android:textColor="@color/color_40"
                android:singleLine="true"
                android:textSize="@dimen/font_11"
                android:layout_marginTop="@dimen/common_8"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_8">
                <TextView
                    android:id="@+id/tv_origin_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10800"
                    android:textSize="@dimen/font_12"
                    android:textColor="@color/color_red_20"/>
                <TextView
                    android:id="@+id/tv_attr_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_80"
                    android:textSize="@dimen/font_12"
                    android:text="48课时"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/common_10"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_plus_price_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:layout_marginLeft="@dimen/common_10"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_11"
            android:textColor="@color/color_80"
            android:text="订单中包含加价购商品："/>
        <TextView
            android:id="@+id/tv_plus_price_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X1"
            android:textSize="@dimen/font_11"
            android:textColor="@color/color_80"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_plus_price_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_11"
            android:textColor="#c20806"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_10"
            android:text="1000"
            />
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_main_activity_grey" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:layout_marginLeft="@dimen/common_10"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_11"
            android:textColor="@color/color_80"
            android:text="校区地址："/>
        <TextView
            android:id="@+id/tv_xiaoqu_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_11"
            android:textColor="@color/color_80"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_10"
            android:text="北京市双井桥富力广场购物中心"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_main_activity_grey" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:layout_marginLeft="@dimen/common_10"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_xxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_11"
            android:textColor="@color/color_80"
            android:text="优惠方式："/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_bonus_num"
            android:layout_toRightOf="@id/tv_xxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red_cir"
            android:layout_marginLeft="10dp"
            android:text="1张可用"
            android:paddingLeft="5dp"
            android:paddingRight="@dimen/common_5"
            android:textSize="@dimen/font_11"
            android:textColor="#c20806"/>
        <TextView
            android:id="@+id/tv_youhui_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_11"
            android:textColor="#c20806"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_10"
            android:text="-"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_main_activity_grey" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/common_10">
            <TextView
                android:id="@+id/tv_attr_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共48课时"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_80"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10"
                android:layout_marginRight="@dimen/common_10"
                android:text="小计："
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_80"/>
            <TextView
                android:id="@+id/tv_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10800"
                android:textColor="@color/color_red_20"
                android:textSize="@dimen/font_12"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>