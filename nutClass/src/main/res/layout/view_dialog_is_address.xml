<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius_white_bg"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_38"
        android:background="@drawable/radius_grey_bg"
        android:text="提示"
        android:gravity="center"
        android:textColor="@color/color_80"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="此订单包含加价购商品"
        android:layout_marginTop="@dimen/common_18"
        android:gravity="center"
        android:textColor="@color/color_text_normal"
        android:textSize="@dimen/font_12"/>
    <TextView
        android:layout_marginTop="@dimen/common_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请填写收货地址"
        android:gravity="center"
        android:textColor="@color/color_text_normal"
        android:textSize="@dimen/font_12"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_30"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="22dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_btn_cancle_new"
            android:textColor="@color/color_white"
            android:text="取消"
            android:textSize="@dimen/font_12"/>
        <Button
            android:id="@+id/btn_makesure"
            android:layout_width="112dp"
            android:layout_marginLeft="7dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_btn_makesure"
            android:textColor="@color/color_white"
            android:text="去填写"
            android:textSize="@dimen/font_12"/>
    </LinearLayout>
</LinearLayout>