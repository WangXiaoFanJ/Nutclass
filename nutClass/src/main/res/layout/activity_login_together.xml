<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >
    <!--新版登录界面-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_titlebar"
        android:background="@color/color_0"
        >
        <ImageView
            android:id="@+id/callback_iv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/titlebar_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机登录"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textColorHint="#a9a9a9"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common_50"
        android:layout_marginLeft="@dimen/common_20"
        android:layout_marginRight="@dimen/common_20">
        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10"
            android:background="@null"
            android:textColorHint="#a9a9a9"
            android:textSize="16sp"
            android:hint="请输入您的手机号"/>
        <TextView
            android:id="@+id/tv_get_verifycode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/login_orange"
            android:layout_marginRight="@dimen/common_10"
            android:layout_marginLeft="@dimen/common_9"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/common_16"
            android:layout_toLeftOf="@+id/tv_get_verifycode"
            android:background="#a9a9a9"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"
        android:layout_marginTop="@dimen/common_15"
        android:layout_marginLeft="@dimen/common_20"
        android:layout_marginRight="@dimen/common_20"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common_15"
        android:layout_marginLeft="@dimen/common_20"
        android:layout_marginRight="@dimen/common_20">
        <EditText
            android:id="@+id/edit_verifycode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_10"
            android:background="@null"
            android:textSize="16sp"
            android:textColorHint="#a9a9a9"
            android:hint="请输入验证码"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"
        android:layout_marginTop="@dimen/common_15"
        android:layout_marginLeft="@dimen/common_20"
        android:layout_marginRight="@dimen/common_20"/>

    <Button
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_35"
        android:layout_marginRight="@dimen/common_20"
        android:layout_marginLeft="@dimen/common_20"
        android:layout_marginTop="@dimen/common_25"
        android:background="@drawable/shape_login_btn"
        android:text="登       录"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_43"
        android:layout_marginLeft="@dimen/common_20"
        android:layout_marginRight="@dimen/common_20"
        >
        <LinearLayout
            android:id="@+id/ll_qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_qq_new"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10"
                android:text="QQ登录"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_weixin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_weixin_new"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10"
                android:text="微信登录"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_weibo_new"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10"
                android:text="微博登录"/>
        </LinearLayout>
    </LinearLayout>
