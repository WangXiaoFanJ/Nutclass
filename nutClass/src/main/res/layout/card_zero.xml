<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_activity_grey"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_5"
    android:paddingLeft="@dimen/common_10"
    android:paddingRight="@dimen/common_10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_white_bg"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_5"
            android:src="@drawable/icon_zero_running" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_12"
            android:layout_marginTop="@dimen/common_10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_15"
            android:paddingRight="@dimen/common_15" >

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/icon_size_zero"
                android:layout_height="@dimen/icon_size_zero"
                android:scaleType="fitXY"
                android:src="@drawable/porfile_default_male" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_15"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/common_6"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="尼克魔力英语"
                            android:textColor="@color/color_100"
                            android:textSize="@dimen/font_16" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/common_5"
                            android:src="@drawable/hospital_flag_v"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/common_6"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_scape"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="销售价："
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_12" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="北京市西程序光范门外大街168号"
                        android:textColor="@color/color_40"
                        android:textSize="@dimen/font_12" />

                    <TextView
                        android:layout_marginTop="@dimen/common_5"
                        android:id="@+id/tv_state"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_red_bg"
                        android:paddingBottom="@dimen/common_2"
                        android:paddingLeft="@dimen/common_5"
                        android:paddingRight="@dimen/common_5"
                        android:paddingTop="@dimen/common_2"
                        android:singleLine="true"
                        android:gravity="center"
                        android:text="09月17日00点开始"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_divider"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/list_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/common_5" >

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_5"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="还剩0天12时47分05秒 结束"
                android:textColor="@color/color_60"
                android:textSize="@dimen/font_12" />
            <TextView
                android:id="@+id/tv_pesron_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_5"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="123456人已经参加"
                android:textColor="@color/color_60"
                android:textSize="@dimen/font_12" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>