<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_activity_grey"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_5"
    android:paddingLeft="@dimen/common_10"
    android:paddingRight="@dimen/common_10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_white_bg"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_12"
            android:layout_marginTop="@dimen/common_12"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_10"
            android:paddingRight="@dimen/common_10" >

            <com.dev.nutclass.view.RoundedImageView
                android:id="@+id/iv_icon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true"
                android:src="@drawable/porfile_default_male"
                app:riv_oval="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_10"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/common_6"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="尼克魔力英语"
                            android:textColor="@color/color_100"
                            android:textSize="@dimen/font_16" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/common_5"
                            android:src="@drawable/hospital_flag_v"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/common_3"
                        android:orientation="horizontal" >

                        <RatingBar
                            android:id="@+id/rb_rating"
                            style="@style/MyRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="3"
                            android:stepSize="1"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:singleLine="true"
                            android:text="销售价："
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_12" />

                        <TextView
                            android:id="@+id/tv_price_02"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="￥1234元"
                            android:textColor="#ff0000"
                            android:textSize="@dimen/font_12" />
                    </LinearLayout>

                    
                    <LinearLayout
                        android:id="@+id/ll_shopping_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/common_6"
                        android:visibility="gone"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:singleLine="true"
                            android:text="校区电话："
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_12" />

                        <TextView
                            android:id="@+id/tv_shopping_tel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="返200元购物卡"
                            android:textColor="@color/color_60"
                            android:textSize="@dimen/font_12" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:text="北京市西程序光范门外大街168号"
                        android:textColor="@color/color_40"
                        android:textSize="@dimen/font_12" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="6dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="@dimen/common_6"
                            android:orientation="horizontal" >

                            <!--<TextView-->
                            <!--android:id="@+id/tv_youhui_tag"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginLeft="@dimen/common_5"-->
                            <!--android:singleLine="true"-->
                            <!--android:text="返购物卡："-->
                            <!--android:textColor="@color/color_60"-->
                            <!--android:textSize="@dimen/font_12" />-->

                            <TextView
                                android:id="@+id/tv_youhui"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/common_5"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="返200元购物卡"
                                android:textColor="#ff0000"
                                android:textSize="@dimen/font_12" />

                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_horizontal"
                                android:text="￥1234元"
                                android:textColor="#ff0000"
                                android:textSize="@dimen/font_12" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="起"
                                android:layout_marginLeft="3dp"
                                android:textSize="@dimen/font_11"
                                android:textColor="@color/color_80"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_dis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_5"
                            android:drawableLeft="@drawable/icon_location_blue"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical|left"
                            android:singleLine="true"
                            android:text="100 公里"
                            android:textColor="@color/color_60"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/font_12" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_divider"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/list_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="@dimen/common_5" >

            <TextView
                android:id="@+id/tv_dis_01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_5"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_location_blue"
                android:drawablePadding="2dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="100 公里"
                android:textColor="@color/color_60"
                android:textSize="@dimen/font_12" />
            <TextView
                android:id="@+id/tv_key"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_5"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="100 公里"
                android:textColor="@color/color_60"
                android:textSize="@dimen/font_12" />
             <TextView
                 android:visibility="gone"
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_5"

                android:drawableLeft="@drawable/icon_phone"
                android:drawablePadding="2dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="100 公里"
                android:textColor="@color/color_60"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_red_bg"
                android:paddingBottom="@dimen/common_2"
                android:paddingLeft="@dimen/common_5"
                android:paddingRight="@dimen/common_5"
                android:paddingTop="@dimen/common_2"
                android:singleLine="true"
                android:text="预约/购买"
                android:textColor="@color/color_0"
                android:textSize="@dimen/font_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_5"
                android:background="@drawable/radius_red_bg"
                android:paddingBottom="@dimen/common_2"
                android:paddingLeft="@dimen/common_5"
                android:paddingRight="@dimen/common_5"
                android:paddingTop="@dimen/common_2"
                android:singleLine="true"
                android:text="预约/购买"
                android:textColor="@color/color_0"
                android:textSize="@dimen/font_12"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/login_close_dialog"
        android:visibility="gone" />

</RelativeLayout>