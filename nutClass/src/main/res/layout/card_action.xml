<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main_activity_grey"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_10"
    android:paddingLeft="@dimen/common_10"
    android:paddingRight="@dimen/common_10" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_banner"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_banner"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_state_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:background="@color/color_red"
            android:paddingBottom="@dimen/common_2"
            android:paddingLeft="@dimen/common_5"
            android:paddingRight="@dimen/common_5"
            android:paddingTop="@dimen/common_2"
            android:singleLine="true"
            android:text="进行中"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_icon"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:background="#3f000000"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_5"
            android:paddingLeft="@dimen/common_15"
            android:paddingRight="@dimen/common_15" >

            <TextView
                android:id="@+id/tv_title_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_5"
                android:singleLine="true"
                android:text="北京市西程序光范门外大街168号"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_location_blue" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/common_5"
                    android:paddingRight="@dimen/common_5"
                    android:singleLine="true"
                    android:text="地址"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>